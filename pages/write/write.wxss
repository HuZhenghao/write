/* write.wxss */
page{
  background-color: #6cd7ac;
}
.words-container{
  box-sizing: border-box;
  height: 124rpx;
  padding: 27rpx 0 0 30rpx;
  background-color: #1ec7aa;
  white-space: nowrap;
}
.words{
  box-sizing: border-box;
  display: inline-block;
  width: 66rpx;
  height: 66rpx;
  margin-right: 30rpx;
  line-height: 66rpx;
  text-align: center;
  font-size: 60rpx;
  color: #777;
  /* border: 2rpx solid #fff; */
}
.cur{
  border: 2rpx solid #fff;
}
.img-container{
  position: relative;
  box-sizing: border-box;
  height: 130rpx;
  padding: 20rpx 53rpx; 
  white-space: nowrap;
}
.bg{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 93rpx;
  background: url(http://www.whtlkj.cn/write/image/bg.png);
  background-size: contain;
   z-index: 1; 
}
.word-img{
  position: relative;
  height: 93rpx;
  z-index: 2;
}
.canvas-container{
  position: relative;
  box-sizing: border-box;
  width: 300px;
  height: 300px;
  margin: 0 auto;
}
.canvas-bg{
  position: absolute;
  top: 0;
  width: 300px;
  height: 300px;
}
.canvas{
  position: absolute;
  top: 0;
  width: 300px;
  height: 300px;
}
.bottom{
  position: fixed;
  bottom: 0;
  left: 0;
  height: 198rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
  background: url(http://www.whtlkj.cn/write/image/bottom_bg.png)no-repeat;
  background-size: cover;
}
.bottom-item{
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  align-items: center;
  width: 25%;
  margin-top: 50rpx;
}
.bottom-item image{
  width: 62rpx;
  height: 62rpx;
  margin-bottom: 10rpx;
}
.bottom-title{
  position: fixed;
  bottom: 144rpx;
  left: 50%;
  width: 372rpx;
  height: 82rpx;
  line-height: 82rpx;
  text-align: center;
  transform: translate(-50%,0);
  background: url(http://www.whtlkj.cn/write/image/title.png)no-repeat;
  background-size: contain;
}